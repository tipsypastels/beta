---
import "../styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/beta/favicon.svg" />
    <link rel="icon" href="/beta/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-stone-950 text-white lg:my-24">
    <div class="prose prose-stone prose-invert"></div>
    <slot />
  </body>
</html>
